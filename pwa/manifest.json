  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": [
            "image/png",
            "image/jpeg",
            "application/json"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+pedidos",
      "url": "/index.html?protocol=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": [
      "navigate-new",
      "auto"
    ]
  },
  
  "note_taking": {
    "new_note_url": "/index.html?action=new-note"
  },
  
  "file_handlers": [
